# ==============================================================================
# PERSONAL AI EMPLOYEE - ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# ==============================================================================

# ===== CORE CONFIGURATION =====
VAULT_PATH=./obsidian_vault
DASHBOARD_PATH=./obsidian_vault/Dashboard.md
LOG_LEVEL=INFO
ENVIRONMENT=development

# ===== LLM CONFIGURATION =====
# PRIMARY: Anthropic Claude (Hackathon Requirement)
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ALTERNATIVE: OpenAI (if not using Anthropic)
# OPENAI_API_KEY=your_openai_api_key_here
# LLM_MODEL=gpt-4o-mini

LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7
LLM_REQUEST_COOLDOWN_SECONDS=2

# ===== BRONZE TIER: FILESYSTEM WATCHER =====
FILESYSTEM_WATCHER_ENABLED=true
WATCH_INBOX_PATH=./watch_inbox
FILESYSTEM_CHECK_INTERVAL_SECONDS=10

# ===== SILVER TIER: GMAIL INTEGRATION =====
# Set to true to enable Gmail processing
GMAIL_ENABLED=false
GMAIL_CREDENTIALS_PATH=./secrets/gmail_credentials.json
GMAIL_TOKEN_PATH=./secrets/gmail_token.json
GMAIL_CHECK_INTERVAL_SECONDS=300
GMAIL_MAX_RESULTS=10

# ===== SILVER TIER: PLAID FINANCE INTEGRATION =====
# Set to true to enable Plaid transaction monitoring
PLAID_ENABLED=false
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox
PLAID_ACCESS_TOKEN=access-sandbox-your-token-here
PLAID_CHECK_INTERVAL_SECONDS=3600

# ===== SILVER TIER: WHATSAPP WATCHER =====
# Playwright-based automation (experimental)
WHATSAPP_ENABLED=false
WHATSAPP_PHONE_NUMBER=+1234567890
WHATSAPP_SESSION_PATH=./secrets/whatsapp_session.json

# ===== SILVER TIER: LINKEDIN AUTOMATION =====
# Automatically post business updates to LinkedIn
LINKEDIN_ENABLED=true
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_TOKEN_PATH=./secrets/linkedin_token.json
LINKEDIN_CHECK_INTERVAL_SECONDS=3600
# Redirect URI must match LinkedIn app settings (default: http://localhost:8000/callback)
LINKEDIN_REDIRECT_URI=http://localhost:8000/callback

# ===== GOLD TIER: FACEBOOK INTEGRATION =====
# Post business updates to Facebook Page
FACEBOOK_ENABLED=true
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_TOKEN_PATH=./secrets/facebook_token.json
FACEBOOK_CHECK_INTERVAL_SECONDS=3600
FACEBOOK_REDIRECT_URI=http://localhost:8000/callback

# ===== GOLD TIER: INSTAGRAM INTEGRATION =====
# Post photos and stories to Instagram Business Account
INSTAGRAM_ENABLED=true
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_account_id_here
INSTAGRAM_TOKEN_PATH=./secrets/instagram_token.json
INSTAGRAM_CHECK_INTERVAL_SECONDS=3600

# ===== GOLD TIER: TWITTER/X INTEGRATION =====
# Post tweets and threads to Twitter/X
TWITTER_ENABLED=true
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_TOKEN_PATH=./secrets/twitter_token.json
TWITTER_CHECK_INTERVAL_SECONDS=3600
TWITTER_REDIRECT_URI=http://localhost:8000/callback

# ===== EMAIL ALERTING =====
# Send critical alerts via email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=your-email@gmail.com
FROM_EMAIL=your-email@gmail.com

# ===== MCP SERVER CONFIGURATION =====
# MCP servers are spawned as needed
MCP_EMAIL_SERVER_PATH=./mcp_servers/email_server
MCP_BROWSER_SERVER_PATH=./mcp_servers/browser_server
MCP_CALENDAR_SERVER_PATH=./mcp_servers/calendar_server
MCP_SLACK_SERVER_PATH=./mcp_servers/slack_server
MCP_ODOO_SERVER_PATH=./mcp_servers/odoo_server

# ===== ODOO/ERP CONFIGURATION =====
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_database
ODOO_USERNAME=your_username
ODOO_PASSWORD=your_password

# ===== SLACK CONFIGURATION =====
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# ===== CALENDAR CONFIGURATION =====
# Google Calendar or similar
CALENDAR_CREDENTIALS_PATH=./secrets/calendar_credentials.json
CALENDAR_TOKEN_PATH=./secrets/calendar_token.json

# ===== RETRY & RESILIENCE =====
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=60
RALPH_LOOP_MAX_ITERATIONS=50

# ===== ORCHESTRATION =====
WATCHDOG_INTERVAL_SECONDS=30
TASK_QUEUE_CHECK_INTERVAL=10

# ===== TIER CONFIGURATION =====
# bronze, silver, gold, platinum
DEPLOYMENT_TIER=bronze

# ===== HUMAN-IN-THE-LOOP =====
HITL_APPROVAL_TIMEOUT_HOURS=24
HITL_APPROVAL_PATH=./task_queue/approvals

# ===== AUDIT & COMPLIANCE =====
AUDIT_LOG_PATH=./audit_logs
AUDIT_RETENTION_DAYS=365
